<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="Feature.Language" description="Feature Language" dependencies="Foundation.*" extends="Helix.Feature">
            <predicate>
            <include name="Feature.Language.Media" database="master" path="/sitecore/media library/Feature/Language" />
          </predicate>
            <rolePredicate>
            <include domain="modules" pattern="^Feature Language .*$" />
          </rolePredicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>