@using System.Globalization
@using Sitecore.Feature.Demo.Texts
@using Sitecore.Foundation.SitecoreExtensions.Repositories
@using Sitecore.StringExtensions
@model Sitecore.Mvc.Presentation.RenderingModel
<div class="panel panel-info">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a href="#onsiteBehaviorPanel" data-toggle="collapse" class="panel-title collapsed">
        <span class="fa fa-bullseye"></span>
        @DictionaryRepository.Get("/Demo/OnsiteBehavior/Title", "Onsite Behavior")
        <span class="glyphicon glyphicon-chevron-down pull-right"></span>
      </a>
    </h4>
  </div>
  <div id="onsiteBehaviorPanel" class="panel-collapse collapse">
    <div class="panel-body">
      <div class="media">
        <div class="media-left">
          <span class="fa fa-users"></span>
        </div>
        <div class="media-body ">
          <h4 class="media-title">
            @DictionaryRepository.Get("/Demo/OnsiteBehavior/Profiling", "Profiling")
          </h4>
          <div class="media">
            <div class="media-body ">
              <h5 class="media-title">Profile name</h5>
              <ol class="list-unstyled">
                <li>
                  <div>Susan the sexy</div>
                  <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                      20%
                    </div>
                  </div>
                </li>
                <li>
                  <small>Susan the sexy</small>
                  <div class="progress">
                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                      20%
                    </div>
                  </div>
                </li>
                <li>
                  <small>Susan the sexy</small>
                  <div class="progress">
                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                      20%
                    </div>
                  </div>
                </li>
              </ol>
            </div>
            <div class="media-right">
              <img src="http://lorempixel.com/30/30/people/" width="30" />
            </div>
          </div>
        </div>
      </div>
      <div class="media">
        <div class="media-left">
          <span class="fa fa-trophy"></span>
        </div>
        <div class="media-body ">
          <h4 class="media-title">
            @DictionaryRepository.Get("/Demo/OnsiteBehavior/GoalsTriggered", "Triggered goals")
            <strong class="pull-right">##</strong>
          </h4>
          <table class="table table-condensed table-borderless">
            <thead>
              <tr>
                <th>Goal</th>
                <th title="@DictionaryRepository.Get("/Demo/OnsiteBehavior/EngagementValue", "Engagement value")"><span class="fa fa-heart"></span></th>
                <th>@DictionaryRepository.Get("/Demo/OnsiteBehavior/GoalVisit", "Visit")</th>
              </tr>
            </thead>
            <tbody>
            <tr>
              <td>Sign up</td>
              <td>5</td>
              <td>Now</td>
            </tr>
            <tr>
              <td>Something else</td>
              <td>5</td>
              <td>Now</td>
            </tr>
            <tr>
              <td>Something else</td>
              <td>5</td>
              <td>03/05 13:45</td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="media">
        <div class="media-left">
          <span class="fa fa-money"></span>
        </div>
        <div class="media-body ">
          <h4 class="media-title">
            @DictionaryRepository.Get("/Demo/OnsiteBehavior/Outcomes", "Outcomes")
            <strong class="pull-right">##</strong>
          </h4>
          <table class="table table-condensed table-borderless">
            <tbody>
              <tr>
                <td>Something else</td>
                <td>Sign up</td>
              </tr>
              <tr>
                <td>Something else</td>
                <td>Now</td>
              </tr>
              <tr>
                <td>Something else</td>
                <td>Something else</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>