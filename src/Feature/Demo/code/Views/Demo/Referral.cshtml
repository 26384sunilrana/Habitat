@using System.Globalization
@using Sitecore.Feature.Demo.Texts
@using Sitecore.Foundation.SitecoreExtensions.Repositories
@using Sitecore.StringExtensions
@model Sitecore.Mvc.Presentation.RenderingModel
<div class="panel panel-info">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a href="#referralPanel" data-toggle="collapse" class="panel-title">
        <span class="fa fa-bullhorn"></span>
        @DictionaryRepository.Get("/Demo/Referral/Title", "Referral")
        <span class="glyphicon glyphicon-chevron-down pull-right"></span>
      </a>
    </h4>
  </div>
  <div id="referralPanel" class="panel-collapse collapse in">
    <div class="panel-body">
      <div class="media">
        <div class="media-left">
          <span class="fa fa-sign-in"></span>
        </div>
        <div class="media-body ">
          <h4 class="media-title">
            @DictionaryRepository.Get("/Demo/Referral/Referrer", "Referrer")
          </h4>
          <div class="text-nowrap" title="facebook.com/sdfasd/asdfasdfasdf/asdfasd/fasdf/asdf/asdfasdf/">
            facebook.com/sdfasd/asdfasdfasdf/asdfasd/fasdf/asdf/asdfasdf/
          </div>
        </div>
      </div>
      <div class="media">
        <div class="media-left">
          <span class="fa fa-bullhorn"></span>
        </div>
        <div class="media-body ">
          <h4 class="media-title">
            @DictionaryRepository.Get("/Demo/Referral/Campaigns", "Campaigns")
            <strong class="pull-right">##</strong>
          </h4>
          <table class="table table-condensed table-borderless">
            <tbody>
              <tr>
                <td colspan="2"><small><strong>Active</strong></small></td>
              </tr>
              <tr>
                <td>Old campaign</td>
                <td>Channel</td>
              </tr>
              <tr>
                <td colspan="2"><small>3/12 10:45</small></td>
              </tr>
              <tr>
                <td>Old campaign</td>
                <td>Web</td>
              </tr>
              <tr>
                <td colspan="2"><small>3/12 10:45</small></td>
              </tr>
              <tr>
                <td>Other campaign</td>
                <td>Paid</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="media">
          <div class="media-left">
            <span class="fa fa-globe"></span>
          </div>
          <div class="media-body ">
            <h4 class="media-title">
              @DictionaryRepository.Get("/Demo/Referral/Location", "Location")
            </h4>
            <div class="text-nowrap" title="Copenhagen, Denmark">
              Copenhagen, Denmark
            </div>
          </div>
        </div>
        <div class="media">
          <div class="media-left">
            <span class="fa fa-tablet"></span>
          </div>
          <div class="media-body ">
            <h4 class="media-title">
              @DictionaryRepository.Get("/Demo/Referral/Device", "Device")
            </h4>
            <div class="text-nowrap">
              iPhone 6S
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>