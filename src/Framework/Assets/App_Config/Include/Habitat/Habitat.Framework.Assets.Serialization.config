<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="Habitat.Framework.Assets" description="Habitat Assets" patch:after="configuration[@name='Habitat.Framework.Serialization']">
          <targetDataStore physicalRootPath="$(sourceFolder)\framework\assets\serialization" type="Rainbow.Storage.SerializationFileSystemDataStore, Rainbow" useDataCache="false" singleInstance="true"/>

          <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">
            <include name="Habitat.Framework.Assets.Templates" database="master" path="/sitecore/templates/Habitat/Framework/Assets"/>
            <include name="Habitat.Framework.Assets.SystemViewRendering" database="master" path="/sitecore/templates/System/Layout/Renderings/View rendering">
              <exclude path="/sitecore/templates/System/Layout/Renderings/View rendering/"/>
            </include>
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>
