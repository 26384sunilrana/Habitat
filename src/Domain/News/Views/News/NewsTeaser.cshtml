@using Habitat.Framework.SitecoreExtensions.Extensions
@using Habitat.Framework.SitecoreExtensions.Repositories
@using Habitat.News
@model Sitecore.Mvc.Presentation.RenderingModel

<div class="thumbnail">
    <a href="@Model.Item.Url()">
        @Html.Sitecore().ImageField(Templates.NewsArticle.Fields.Image.ToString(), Model.Item, mw: 500)
    </a>
    <div class="caption">
        <h3>@Html.Sitecore().Field(Templates.NewsArticle.Fields.Title.ToString(), Model.Item)</h3>
        @Html.Sitecore().Field(Templates.NewsArticle.Fields.Summary.ToString(), Model.Item)
        <p class="date text-muted">
            @Html.Sitecore().Field(Templates.NewsArticle.Fields.Date.ToString(), new
        {
            format = "MMMM dd, yyyy"
        })
        </p>
        <p class="read-more">
            <a href="@Html.Sitecore().CurrentRendering.Item.Url()" class="btn btn-info">
                @DictionaryRepository.Get("/R/Read more", "***READ MORE***")
            </a>
        </p>
    </div>
</div>
