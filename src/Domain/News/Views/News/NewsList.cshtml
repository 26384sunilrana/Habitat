@using Habitat.Article
@using Habitat.Framework.SitecoreExtensions.Extensions
@model IEnumerable<Sitecore.Data.Items.Item>
<ul class="news">
    @foreach (var item in Model)
    {
        <li class="media">
            <div class="media-left media-top">
                <a href="@item.Url()">
                    @Html.Sitecore().ImageField(Templates.HasImage.Fields.Image.ToString(), item, mw: 100)
                </a>
            </div>
            <div class="media-body">
                <h4 class="media-heading">
                    <a href="@item.Url()">@Html.Sitecore().Field(Templates.HasTitle.Fields.Title.ToString(), item)</a>
                </h4>
                <em class="date">
                    @Html.Sitecore().Field(Habitat.News.Templates.NewsArticle.Fields.Date.ToString(), item, new {format = "MMMM dd, yyyy"})
                </em>
                <p>
                    @Html.Sitecore().Field(Templates.HasSummary.Fields.Summary.ToString(), item)
                </p>
            </div>
        </li>
    }
</ul>