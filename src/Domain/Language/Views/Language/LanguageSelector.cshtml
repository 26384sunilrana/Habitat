@model Sitecore.Mvc.Presentation.RenderingModel
@using Habitat.Language.Infrastructure.Repositories

@{
    var activeLanguage = LanguageRepository.GetActive();
    var languages = LanguageRepository.GetAll().ToArray();
    if (languages.Length <= 1)
    {
        return;
    }
}
<li>
    <a href="javascript:;" class="c-link dropdown-toggle"><i class="fa fa-globe"></i><span class="c-arrow c-toggler"></span></a>
    <ul class="dropdown-menu c-menu-type-classic c-pull-left">
        @foreach (var language in languages)
            {
            <li>
                <a href="@language.Url">@language.Name</a>
            </li>
        }
    </ul>
</li>
