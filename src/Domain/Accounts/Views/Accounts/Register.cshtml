@model Habitat.Accounts.Models.RegistrationInfo

@using (Html.BeginForm("Register", "Accounts", FormMethod.Post))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.EditorFor(x => x.Email, new { @class = "form-control", id = "registerEmail" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.UserName)
        @Html.EditorFor(x => x.UserName, new { @class = "form-control", id = "registerName" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", id = "registerPassword" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ConfirmPassword)
        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", id = "registerConfirmPassword" })
    </div>

    <input type="submit" class="btn btn-default" value="Register" />
}