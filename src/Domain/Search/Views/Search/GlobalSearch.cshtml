@using Habitat.Framework.SitecoreExtensions.Extensions
@using Habitat.Search
@using Sitecore.Data.Items
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var item = Html.Sitecore().CurrentRendering.Item;
    if (!item.IsDerived(Templates.SearchResults.ID))
    {
        return;
    }
}
<li class="dropdown search">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-search"></i>
    </a>
    <div class="dropdown-menu global-search">
        <form class="navbar-form" action="@item.Url()">
            <div class="input-group">
                <input type="text" name="query" placeholder="@item[Templates.SearchResults.Fields.SearchBoxTitle]" value="" class="form-control" autocomplete="off">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </form>
    </div>
</li>