@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel

@if (Sitecore.Context.PageMode.IsPageEditor)
{
    <div class="pageedit summary">
        <label>Summary:</label>
        <div>
            @Html.Sitecore().Field("summary")
        </div>
    </div>
}

<div class="article body">
    @Html.Sitecore().Field("Body")
</div>