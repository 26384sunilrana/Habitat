@using Habitat.Framework.SitecoreExtensions.Extensions
@using Habitat.Framework.SitecoreExtensions.Repositories
@using Habitat.StandardContent
@model Sitecore.Mvc.Presentation.RenderingModel

@if (Model.Item == null) { return; } 

<div class="panel panel-default teaser">
    <div class="panel-heading">
        <h3 class="teaser-heading">
            @Html.Sitecore().Field(Templates.HasTitle.Fields.Title.ToString(), Model.Item)
        </h3>
    </div>
    <div class="panel-body">
        <div class="teaser-image">
            <a href="@Model.Item.LinkFieldUrl(Templates.HasLink.Fields.Link)">
                @Html.Sitecore().ImageField(Templates.HasImage.Fields.Image.ToString(), Model.Item, mw: 500, cssClass: "img-responsive")
            </a>
        </div>
        <div class="teaser-text">
            @Html.Sitecore().Field(Templates.HasSummary.Fields.Summary.ToString(), Model.Item)
        </div>
    </div>
    <div class="panel-footer">
        <a href="@Model.Item.Url()" class="btn btn-info">
            @DictionaryRepository.Get("/R/Read more", "READ MORE")
        </a>
    </div>
</div>
