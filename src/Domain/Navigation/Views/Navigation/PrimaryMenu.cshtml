@using Habitat.Framework.SitecoreExtensions.Extensions
@using Habitat.Navigation
@model Habitat.Navigation.Models.NavigationItems
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#primary-navigation" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.Sitecore().Placeholder("primarymenuheader")
        </div>
        <div class="collapse navbar-collapse" id="primary-navigation">
            <ul class="nav navbar-nav primary-nav">
                @foreach (var item in Model.Items)
                {
                    <li class="@(item.IsActive ? "active" : string.Empty)">
                        <a href="@item.Url" target="@item.Target">@Html.Sitecore().Field(Templates.Navigable.Fields.NavigationTitle.ToString(), item.Item)</a>
                    </li>
                }
            </ul>
            <ul class="nav navbar-nav primary-nav-additional pull-right">
                @Html.Sitecore().Placeholder("primarymenuitems")
            </ul>
        </div>
    </div>
</nav>
